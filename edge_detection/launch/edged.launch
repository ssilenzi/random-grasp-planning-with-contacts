<launch>
  <group ns="edge_detection">
    <node
      pkg="edge_detection"
      type="edged.py"
      name="edged"
      required="true"
      output="screen"
    />
    <rosparam
      command="load"
      file="$(find edge_detection)/config/edged.yaml"
    />
  </group>
  <arg
    name="echo"
    default="false"
  />
  <group ns="edge_detection" if="$(arg echo)">
    <node
      pkg="rostopic"
      type="rostopic"
      name="$(anon rostopic)"
      required="false"
      args="echo boxes"
      output="screen"
      launch-prefix="gnome-terminal --"
    />
  </group>
</launch>
