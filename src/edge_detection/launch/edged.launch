<launch>
  <group ns="edge_detection">
    <node
      pkg="edge_detection"
      type="edged.py"
      name="edged"
      required="true"
      output="screen"
    />
  </group>
  <arg
    name="echo"
    default="1"
  />
  <group ns="edge_detection" if="$(arg echo)">
    <node
      pkg="rostopic"
      type="rostopic"
      name="$(anon rostopic)"
      required="false"
      args="echo boxes"
      output="screen"
      launch-prefix="gnome-terminal --"
    />
    <node
      pkg="rosservice"
      type="rosservice"
      name="$(anon rosservice)"
      required="false"
      args="call --wait edged/set_logger_level rosout DEBUG"
      output="screen"
    />
  </group>
</launch>
